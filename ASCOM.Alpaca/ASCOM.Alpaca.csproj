<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Library</OutputType>
		<TargetFramework>netstandard2.0</TargetFramework>
		<ApplicationIcon />
		<StartupObject />
		<RootNamespace>ASCOM.Alpaca</RootNamespace>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Authors>Daniel Van Noord and Peter Simpson</Authors>
		<Company>ASCOM Initiative</Company>
		<Description>A .Net Standard library providing ASCOM Alpaca client and discovery components.</Description>
		<Copyright>Copyright ASCOM Initiative 2022</Copyright>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageIcon>ASCOMBoarderless.png</PackageIcon>
		<PackageReleaseNotes>Initial release supporting all device types except Video and targeting .NET Standard 2.0.</PackageReleaseNotes>
		<PackageId>ASCOM.Alpaca.Components</PackageId>
		<RepositoryUrl>https://www.myget.org/F/ascom-initiative/api/v3/index.json</RepositoryUrl>
		<SignAssembly>true</SignAssembly>
		<AssemblyOriginatorKeyFile>..\ASCOM.snk</AssemblyOriginatorKeyFile>
		<DelaySign>false</DelaySign>
		<Configurations>Debug;Release;Swashbuckle_Documentation</Configurations>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<FileVersion>0.9.0.1</FileVersion>
		<AssemblyVersion>0.9.0.1</AssemblyVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DebugType>embedded</DebugType>
		<DebugSymbols>true</DebugSymbols>

	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="ASCOM.Alpaca.Discovery\Response Classes\**" />
	  <EmbeddedResource Remove="ASCOM.Alpaca.Discovery\Response Classes\**" />
	  <None Remove="ASCOM.Alpaca.Discovery\Response Classes\**" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\ASCOMBoarderless.png">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="ASCOM.Exception.Library" Version="6.6.1" />
		<PackageReference Include="System.Text.Json" Version="6.0.6" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\ASCOM.Common\ASCOM.Common.csproj" />
		<ProjectReference Include="..\ASCOM.Tools\ASCOM.Tools.csproj" />
	</ItemGroup>

</Project>
