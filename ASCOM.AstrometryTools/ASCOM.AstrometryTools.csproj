			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<None Include="NovasLibraries\win-arm64\cio_ra.bin">
			<Pack>True</Pack>
			<PackagePath>runtimes/win-arm64/native</PackagePath>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>

		<!-- Linux Intel 64bit Native Library -->
		<None Include="NovasLibraries\linux-x64\libnovas.so">
			<Pack>True</Pack>
			<PackagePath>runtimes/linux-x64/native</PackagePath>
		</None>
		<None Include="NovasLibraries\linux-x64\cio_ra.bin">
			<Pack>True</Pack>
			<PackagePath>runtimes/linux-x64/native</PackagePath>
		</None>

		<!-- Linux ARM Native Library -->
		<None Include="NovasLibraries\linux-arm\libnovas.so">
			<Pack>True</Pack>
			<PackagePath>runtimes/linux-arm/native</PackagePath>
		</None>
		<None Include="NovasLibraries\linux-arm\cio_ra.bin">
			<Pack>True</Pack>
			<PackagePath>runtimes/linux-arm/native</PackagePath>
		</None>

		<!-- Linux ARM64 Native Library -->
		<None Include="NovasLibraries\linux-arm64\libnovas.so">
			<Pack>True</Pack>
			<PackagePath>runtimes/linux-arm64/native</PackagePath>
		</None>
		<None Include="NovasLibraries\linux-arm64\cio_ra.bin">
			<Pack>True</Pack>
			<PackagePath>runtimes/linux-arm64/native</PackagePath>
		</None>

		<!-- OSX Intel 64bit Native Library -->
		<None Include="NovasLibraries\osx-x64\libnovas.dylib">
			<Pack>True</Pack>
			<PackagePath>runtimes/osx-x64/native</PackagePath>
