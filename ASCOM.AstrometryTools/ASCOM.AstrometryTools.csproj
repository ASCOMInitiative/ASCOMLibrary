			<PackagePath>runtimes/osx-x64/native</PackagePath>
		</None>

		<!-- OSX Apple Silicon ARM 64bit Native Library -->
		<None Include="NovasLibraries\osx-arm64\libnovas.dylib">
			<Pack>True</Pack>
			<PackagePath>runtimes/osx-arm64/native</PackagePath>
		</None>
