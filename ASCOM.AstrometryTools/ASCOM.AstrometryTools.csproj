			<Pack>True</Pack>
			<PackagePath>runtimes/osx-arm64/native</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="SofaTesterSourceCode\" />
	  <Folder Include="SofaSourceCode\" />
	</ItemGroup>

</Project>
