<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<AssemblyOriginatorKeyFile>..\ASCOM.snk</AssemblyOriginatorKeyFile>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<SignAssembly>true</SignAssembly>
		<PackageId>ASCOM.Tools</PackageId>
		<Authors>Daniel Van Noord, Peter Simpson</Authors>
		<Description>A set of components to support development of ASCOM clients, drivers and Alapca devices.</Description>
		<PackageIcon>ASCOMBoarderless.png</PackageIcon>
		<Configurations>Debug;Release;Swashbuckle_Documentation</Configurations>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DebugType>embedded</DebugType>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\ASCOMBoarderless.png">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="ASCOM.Exceptions" Version="6.5.1" />
		<PackageReference Include="System.Text.Json" Version="4.7.2" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\ASCOM.Common\ASCOM.Common.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\ASCOM.Common\README.md">
			<Pack>True</Pack>
		</None>
	</ItemGroup>

	<ItemGroup>
	  <None Update="SOFALibraries\linux-arm64\libsofa.so">
	    <Pack>True</Pack>
	    <PackagePath>runtimes/linux-arm64/native</PackagePath>
	  </None>
	  <None Update="SOFALibraries\linux-arm\libsofa.so">
	    <Pack>True</Pack>
	    <PackagePath>runtimes/linux-arm/native</PackagePath>
	  </None>
	  <None Update="SOFALibraries\linux-x64\libsofa.so">
	    <Pack>True</Pack>
	    <PackagePath>runtimes/linux-x64/native</PackagePath>
	  </None>
	  <None Update="SOFALibraries\win-x64\libsofa.dll">
	    <Pack>True</Pack>
	    <PackagePath>runtimes/win-x64/native</PackagePath>
	  </None>
	  <None Update="SOFALibraries\win-x86\libsofa.dll">
	    <Pack>True</Pack>
	    <PackagePath>runtimes/win-x86/native</PackagePath>
	  </None>
	</ItemGroup>

</Project>
