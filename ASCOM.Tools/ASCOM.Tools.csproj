<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<AssemblyOriginatorKeyFile>..\ASCOM.snk</AssemblyOriginatorKeyFile>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<SignAssembly>true</SignAssembly>
		<PackageId>ASCOM.Tools</PackageId>
		<Company>D</Company>
		<Authors>Daniel Van Noord, Peter Simpson</Authors>
		<Description>A set of components to support development of ASCOM clients, drivers and Alapca devices.</Description>
		<PackageIcon>ASCOM.png</PackageIcon>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DebugType>embedded</DebugType>
	</PropertyGroup>

	<ItemGroup>
	  <None Include="..\ASCOM.png">
	    <Pack>True</Pack>
	    <PackagePath></PackagePath>
	  </None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="ASCOM.Exceptions" Version="6.5.1" />
		<PackageReference Include="System.Text.Json" Version="4.7.2" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\ASCOM.Common\ASCOM.Common.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <None Include="..\ASCOM.Common\README.md">
	    <Pack>True</Pack>
	  </None>
	</ItemGroup>

</Project>
